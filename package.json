{
  "name": "sassy-project",
  "version": "1.0.0",
  "scripts": {
    "dev:server": "live-server",
    "dev:sass": "node-sass source/scss/styles.scss --watch --output=compiled/css --output-style=compressed --source-map=true",
    "dev": "run-p dev:*",
    "build:htmlhint": "htmlhint index.html",
    "build:stylelint": "stylelint 'source/scss/*.scss'",
    "build:standard": "standard",
    "build:sass": "node-sass source/scss/styles.scss --output=compiled/css --output-style=compressed --source-map=true",
    "deploy:surge": "surge --project . --domain sassy-project.surge.sh",
    "deploy": "run-s build:* deploy:surge"
  },
  "devDependencies": {
    "htmllint": "^0.7.3",
    "live-server": "^1.2.1",
    "node-sass": "^4.11.0",
    "npm-run-all": "^4.1.5",
    "standard": "^12.0.1",
    "stylelint": "^9.10.1",
    "surge": "^0.20.3"
  }
}
